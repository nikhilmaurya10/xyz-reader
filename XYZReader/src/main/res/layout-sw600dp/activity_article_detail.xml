<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/detail_card_view_width"
    android:layout_height="@dimen/detail_card_view_height"
    android:layout_marginTop="@dimen/detail_card_view_marginTop"
    android:layout_gravity="center"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/up_container"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageButton
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/action_up"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/button_marginTop"
            android:layout_marginBottom="@dimen/button_marginTop"
            android:background="?selectableItemBackgroundBorderless"
            android:backgroundTint="@android:color/white"
            android:contentDescription="@string/up"
            android:src="@drawable/ic_close_24dp"
            android:layout_gravity="center_horizontal"
            />
    </FrameLayout>

</FrameLayout>