<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/list_card_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <!--suppress AndroidLintContentDescription -->
    <com.example.xyzreader.ui.DynamicHeightNetworkImageView
        android:id="@+id/thumbnail"
        android:transitionName="@string/transition_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:background="@color/photo_placeholder" />

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/header_background"
        android:transitionName="@string/transition_text">



        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/card_header_title_padding"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:maxLines="4"
            android:textStyle="bold"
            tools:text="Hello Title"/>
        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/card_header_byline_padding_verticle"
            android:paddingBottom="@dimen/card_header_byline_padding_verticle"
            android:paddingStart="@dimen/card_header_byline_padding_horizontal"
            android:paddingEnd="@dimen/card_header_byline_padding_horizontal"
            android:textColor="@android:color/white"
            android:maxLines="2"
            android:textSize="@dimen/card_byline_textSize"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            tools:text="by Carl sympsion"
            android:background="@android:color/black"/>
    </LinearLayout>



</android.support.v7.widget.CardView>
